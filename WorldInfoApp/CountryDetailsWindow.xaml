<Window x:Class="WorldInfoApp.Views.CountryDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CountryDetailsWindow" Height="700" Width="600"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Margin="20">
            <StackPanel Margin="20">
                <TextBlock x:Name="CountryNameTextBlock" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#ECF0F1"/>
                <Image x:Name="FlagImage" Height="150" Margin="0,0,0,20" HorizontalAlignment="Center" ImageFailed="FlagImage_ImageFailed"/>

                <TextBlock Text="Official Name:" FontWeight="Bold" FontSize="18" Margin="0,5,0,0"/>
                <TextBlock x:Name="OfficialNameTextBlock" Margin="0,0,0,10" FontSize="16"/>

                <TextBlock Text="Capital:" FontWeight="Bold" FontSize="18" Margin="0,5,0,0"/>
                <TextBlock x:Name="CapitalTextBlock" Margin="0,0,0,10" FontSize="16"/>

                <TextBlock Text="Region:" FontWeight="Bold" FontSize="18" Margin="0,5,0,0"/>
                <TextBlock x:Name="RegionTextBlock" Margin="0,0,0,10" FontSize="16"/>

                <TextBlock Text="Subregion:" FontWeight="Bold" FontSize="18" Margin="0,5,0,0"/>
                <TextBlock x:Name="SubregionTextBlock" Margin="0,0,0,10" FontSize="16"/>

                <TextBlock Text="Population:" FontWeight="Bold" FontSize="18" Margin="0,5,0,0"/>
                <TextBlock x:Name="PopulationTextBlock" Margin="0,0,0,10" FontSize="16"/>

                <TextBlock Text="Gini:" FontWeight="Bold" FontSize="18" Margin="0,5,0,0"/>
                <TextBlock x:Name="GiniTextBlock" FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
